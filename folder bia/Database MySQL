    CREATE DATABASE bina_iman;

    -- Tabel pengguna
    CREATE TABLE users (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nama VARCHAR(100),
    email VARCHAR(100) UNIQUE,
    password VARCHAR(255)
    );

    -- Tabel pendaftaran siswa
    CREATE TABLE pendaftaran (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nama VARCHAR(100),
    email VARCHAR(100),
    telepon VARCHAR(20),
    pesan TEXT,
    tanggal_daftar TIMESTAMP DEFAULT CURRENT_TIMESTAMP
    );
